extends layout

block content
	style.
		.header{
			height:100px;
		}
		.container{
			z-index:97;
			width:675px;
			height:auto;
			background-color:#fff;
			position:absolute;
			left:-345px;
			margin-left:50%;
			padding:10px;
			text-align:center;
			box-shadow:0px 0px 10px #999;
		}
		.container h1{
			font-family: 'Lobster', cursive;
		}

	.container
		h1 Registrarme
		br
		br
		form(method="post")
			table(align="center")
				tr
					td
						div.group
							input(type="email" required)
							span.highlight
							span.bar
							label Email
					td
						div.group
							input(type="text" required)
							span.highlight
							span.bar
							label Escuela
				tr
					td
						div.group
							input(type="text" required)
							span.highlight
							span.bar
							label Nombre
					td(align="right")
						div.group
							input(type="text" required)
							span.highlight
							span.bar
							label Apellido
				tr
					td
						div.group
							input(type="password" required)
							span.highlight
							span.bar
							label Contraseña
				tr
					td(colspan="2" align="center")
						input(type="submit" value="Registrarme")
						span &nbsp;
						input(type="button" onclick="window.location='/login'" value="Iniciar Sesión")
			br
			
        span
        span
      .proyect_name SMDE

    block content


  script.
      function showmenu(){
          $(".menu").animate({left:'0px'});
          $(".menu").css('box-shadow' ,'2px 0px 15px #2e2e2e');
          $(".screen").show();
      }

      function hidemenu(){
          $(".menu").animate({left:'-330px'});
          $(".menu").css('box-shadow' ,'none');
          $(".screen").hide();
      }

extends ../layout

block content
	style.
		.header{
			height:65px;
		}
		.container{
			z-index:97;
			width:850px;
			height:auto;
			position:absolute;
			left:-425px;
			margin-left:50%;
			padding:10px;
			text-align:center;
			
		}
		.tableContainer{
			width:100%;
			height:auto;
			background-color:#fff;
			position:absolute;
			left:-425px;
			margin-left:50%;
			padding:10px;
			text-align:center;
			box-shadow:0px 0px 10px #999;
			top:150px;
		}
		.tableContainer table{
			width:100%;
		}
		.btn{
			right:20px;
			top:30px;
			background-color:#7cb342;
			color:#fff;
			position:absolute;
			padding:15px;
			cursor:pointer;
		}
		

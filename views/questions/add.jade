extends ../layout

block content
	style.
		.content{
			z-index:97;
			width:600px;
			height:auto;
			background-color:#fff;
			position:absolute;
			left:-300px;
			margin-left:50%;
			padding:50px;
			text-align:center;
			box-shadow:0px 0px 10px #999;
		}
		.content h1{
			font-family:"helvetica";
			font-weight:800;
			font-size:30px;
			color:#333;
			text-align:center;
			padding-bottom:30px;
			border-bottom:2px solid #999;
		}
		td{
			text-align:center;
			padding-left:20px;
		}
		.container{
			width:100%;
		}
		.header_under{
			height:30px;
		}
	
	.content
		h1 Añadir pregunta
		form(action="/question/add" method="post")
			.container
				table(align="center")
					tr
						td(colspan="2")
							div.group
								input(type='text', name='question', required)
								span.highlight
								span.bar
								label Pregunta
					tr
						td
							input(type="radio",name="answ")
						td
							div.group
								input(type='text', name='aq', required)
								span.highlight
								span.bar
								label Respuesta A
								
					tr
						td
							input(type="radio",name="answ")
						td
							div.group
								input(type='text', name='bq', required)
								span.highlight
								span.bar
								label Respuesta B
					tr
						td
							input(type="radio",name="answ")
						td
							div.group
								input(type='text', name='cq', required)
								span.highlight
								span.bar
								label Respuesta C
					tr
						td
							input(type="radio",name="answ")
						td
							div.group
								input(type='text', name='dq', required)
								span.highlight
								span.bar
								label Respuesta d
				
				select
					-each t  in topics
						option #{t.nombre}

				br
				br
				input(type="submit" value="Añadir Pregunta")

extends layout

block content
	style.
		.container{
			z-index:97;
			width:480px;
			height: 520px;
			background-color: #eeeeee;
			position: relative;
			margin: 0px auto;
			padding:0px;
			padding-bottom: 18px;
			text-align:center;
			box-shadow:0px 3px 12px #616161;
		}
		.container h1{
			font-family:"Roboto" , sans-serif;
			font-weight:300;
			color:#616161;
			text-align:left;
			padding:20px;
			margin: 0;
			padding-left:32px;
			padding-top:32px;
			border-bottom: 3px solid #9e9e9e;
		}
		.container table{
			width:70%;
		}
		.header{
			z-index:1;
		}

		.form{
			padding:0px;
		}
	.each_containerblock
		.container
			h1 Iniciar Sesión
			br
			br
			form(method="post", action='inicia')
				table(align="center" style="widht:100%;")
					tr
						td
							div.group
								input(type='text', name='mail', required)
								span.highlight
								span.bar
								label Email
					tr
						td
							div.group
								input(type='password', name='contra', required)
								span.highlight
								span.bar
								label Contraseña
					tr
						td(colspan="2" align="center")
							br
							br
							br
							input(type="submit", value="Iniciar")
							span &nbsp;
							input(type="button", onclick="window.location='/signup'", value="Registrarme")
				br

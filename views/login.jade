extends layout

block content
	style.
		.header{
			height:100px;
		}
		.container{
			z-index:97;
			width:450px;
			height:auto;
			background-color:#fff;
			position:absolute;
			left:-225px;
			margin-left:50%;
			padding:10px;
			text-align:center;
			box-shadow:0px 0px 10px #999;
		}
		.container h1{
			font-family:"Lobster";
		}

	.container
		h1 Iniciar Sesión
		br
		br
		form(method="post")
			table(align="center")
				tr
					td
						div.group
							input(type="email" required)
							span.highlight
							span.bar
							label Email
				tr
					td
						div.group
							input(type="password" required)
							span.highlight
							span.bar
							label Contraseña
				tr
					td(colspan="2" align="center")
						input(type="submit" value="Entrar")
						span &nbsp;
						input(type="button" onclick="window.location='/signup'" value="Registrarme")
			br